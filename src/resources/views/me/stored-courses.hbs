<div class="mt-4">
  <h3>My Courses</h3>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Course Name</th>
        <th scope="col" colspan="2">Create Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.createdAt}}</td>
        <td><a href="/courses/edit/{{this._id}}" class="btn btn-link">Edit</a></td>
        <td><a href="" class="btn btn-link">Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>