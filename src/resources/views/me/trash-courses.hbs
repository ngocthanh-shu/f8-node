<div class="mt-4">
  <div>
    <a href="/me/stored/courses">Courses List</a>
    <h3>Deleted Courses</h3>
  </div>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Course Name</th>
        <th scope="col" colspan="2">Create Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.createdAt}}</td>
        <td><a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Restore</a></td>
        <td><a class="btn btn-link" data-bs-toggle="modal" data-bs-target="#delete-course-modal" data-id="{{this._id}}"
            data-name="{{this.name}}">Delete</a></td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">No courses found.
        </td>
        
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{!-- delete hidden form --}}
<form name="delete-course-form" method="post">
</form>

{{!-- restore hidden form --}}
<form name="restore-course-form" method="post">
</form>


{{!-- Confirm delete course --}}
<div class="modal" id="delete-course-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notice</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="msg">Do you need to delete the course </p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/trash-courses.javascript.js"></script>