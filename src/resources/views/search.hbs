<div class="mt-4 search-form">
    <form method="post">
        <div class="mb-3 form-group">
            <label for="search-input" class="form-label">Enter Keyword</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Enter">
        </div>
        <div class="mb-3 form-group">
            <label for="search-category" class="form-label">Select Category</label>
            <select name="category" class="form-control" id="search-category">
                <option value="">All</option>
                <option value="1">Category 1</option>
                <option value="2">Category 2</option>
                <option value="3">Category 3</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>