<div class="mt-4">
    <h3>Update a course</h3>

    <form class="mt-4" method="post" action="/courses/update/{{course._id}}?_method=PUT">
        <div class="mb-3 form-group">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="mb-3 form-group">
            <label for="desc" class="form-label">Description</label>
            <textarea class="form-control" id="desc" name="desc" rows="3">{{course.desc}}</textarea>
        </div>
        <div class="mb-3 form-group">
            <label for="videoId" class="form-label">Link Video</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>